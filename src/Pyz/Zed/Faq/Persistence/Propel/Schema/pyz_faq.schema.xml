<?xml version="1.0"?>
<database xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          name="zed"
          xsi:noNamespaceSchemaLocation="http://static.spryker.com/schema01.xsd"
          namespace="Orm\Zed\Faq\Persistence"
          package="src.Orm.Zed.Faq.Persistence"
          >
    <table name="pyz_faq_question" >
        <column name="id_question" required="true" type="INTEGER"
                autoIncrement="true" primaryKey="true"/>
        <column name="title" required="true" type="VARCHAR"
                size="255"/>
        <column name="answer" type="VARCHAR" size="255" required="true" />
        <column name="state" type="INTEGER"  />
        <column name="fk_spy_user" type="INTEGER" required="true" />
        <foreign-key foreignTable="spy_user" onDelete="CASCADE">
            <reference local="fk_spy_user" foreign="id_user" />
        </foreign-key>
    </table>
    <table name="pyz_faq_votes" >
        <column name="fk_pyz_faq_question" required="true" type="INTEGER" primaryKey="true"/>
        <column name="fk_voter_id" type="INTEGER" required="true" primaryKey="true" />
        <column name="vote" type="INTEGER" required="true" />
        <foreign-key foreignTable="pyz_faq_question" onDelete="CASCADE">
            <reference local="fk_pyz_faq_question" foreign="id_question" />
        </foreign-key>
        <foreign-key foreignTable="spy_customer" onDelete="CASCADE">
            <reference local="fk_voter_id" foreign="id_customer" />
        </foreign-key>

    </table>
</database>
